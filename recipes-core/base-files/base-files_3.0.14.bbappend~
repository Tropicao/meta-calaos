
FILESEXTRAPATHS := "${THISDIR}/${PN}"

PRINC = "3"

SRC_URI_append = " file://var-run.conf \
                   file://machine-id"

dirs755 += "/run /media"

# links to volatile for readonly RFS
do_install_append () {
		install -d ${D}${sysconfdir}/tmpfiles.d
		install -m 0644 ${WORKDIR}/var-run.conf ${D}${sysconfdir}/tmpfiles.d/
		cd ${D}${sysconfdir}
                cp ${WORKDIR}/machine-id ${D}${sysconfdir}
		mkdir -p dropbear
		ln -sf /var/volatile/run/dropbear_rsa_host_key dropbear/dropbear_rsa_host_key
		ln -sf /var/volatile/run/resolv.conf resolv.conf
		cd ${D}${localstatedir}/lib
		ln -sf ../volatile/tmp/random-seed random-seed
		ln -sf ../volatile/tmp/ connman
		ln -sf ../volatile/tmp/home home
		cd
}